<Window x:Class="cashbook.wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cash Book" Height="640" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="8" Background="#7F414F4D" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Margin="5">select month:</Label>
            <DatePicker Grid.Column="1" Margin="5"></DatePicker>
            <Button Grid.Column="2" Margin="5">show</Button>
        </Grid>

        <Grid Grid.Row="1" Margin="8" Background="#7F414F4D" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Margin="5" FontSize="20" FontWeight="Bold">month</Label>
            <DataGrid Grid.Row="1" Margin="5"></DataGrid>
        </Grid>

        <Grid Grid.Row="2" Margin="8" Background="#7F414F4D" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <DatePicker Grid.Column="0" Margin="5" VerticalAlignment="Center"></DatePicker>
            <TextBox Grid.Column="1" Margin="5" MinWidth="200" VerticalAlignment="Center"></TextBox>
            <TextBox Grid.Column="2" Margin="5" MinWidth="50" TextAlignment="Right" VerticalAlignment="Center">0.00</TextBox>
            <StackPanel Grid.Column="3" Margin="5" HorizontalAlignment="Left">
                <Button>Withdraw</Button>
                <Button>Deposit</Button>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
